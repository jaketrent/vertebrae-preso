@font-face
  font-family 'haettenschweiler'
  src url('/static/type/haettenschweiler-webfont.eot')
  src url('/static/type/haettenschweiler-webfont.eot?#iefix') format('embedded-opentype'),
  url('/static/type/haettenschweiler-webfont.woff') format('woff'),
  url('/static/type/haettenschweiler-webfont.ttf') format('truetype'),
  url('/static/type/haettenschweiler-webfont.svg#haettenschweiler') format('svg')
  font-weight normal
  font-style normal

sans-serif()
  font-family 'haettenschweiler', 'impact', arial, sans-serif

.deck-container
  background url('/static/img/bg-repeat-xy.jpg')

.slide


  h1, h2, h3
    sans-serif()
    text-transform uppercase
    font-weight normal
    color #fff
    text-shadow 1px 1px 3px #000
  h2
    font-size 4em
  h3
    font-size 2em

  .content
    background rgba(0,0,0,.5)
    overflow hidden
    padding 5%
    color #fff

  .half
    width 48%
    float left
    margin-left 2%

  p
    font-size 30px

  code
    white-space pre
    border 3px solid #fff


