@import '/Users/jtsnake/dev/vertebrae-preso/static/css/nib'

@font-face
  font-family 'haettenschweiler'
  src url('/static/type/haettenschweiler-webfont.eot')
  src url('/static/type/haettenschweiler-webfont.eot?#iefix') format('embedded-opentype'),
  url('/static/type/haettenschweiler-webfont.woff') format('woff'),
  url('/static/type/haettenschweiler-webfont.ttf') format('truetype'),
  url('/static/type/haettenschweiler-webfont.svg#haettenschweiler') format('svg')
  font-weight normal
  font-style normal

sans-serif()
  font-family 'haettenschweiler', 'impact', arial, sans-serif

body
  background url('/static/img/bg-repeat-xy.jpg')

.watermark
  position absolute
  bottom 0
  right 20px
  z-index 2
  sans-serif()
  font-size 36em
  line-height 1em
  letter-spacing 7px
  margin 0
  padding 0
  color rgba(0,0,0,.6)

.hex
  position absolute
  top -160px
  right -132px
  width 493px
  height 436px
  z-index 1
  background-image url('/static/img/vertebrae.png')

.ribbon
  position absolute
  top 0
  left -70px
  height 65px
  width 250px
  background rgba(0,0,0,.7)
  transform(rotate(-45deg))

.deck-container
  z-index 3

.slide

  h1, h2, h3
    sans-serif()
    text-transform uppercase
    font-weight normal
    color #fff
    text-shadow 1px 1px 3px #000
  h2
    font-size 5em
    border 0
    margin 0
    padding 7px 0 20px 86px
  h3
    font-size 2em

  .content
    background rgba(0,0,0,.5)
    overflow hidden
    padding 5%
    color #fff

  .half
    width 48%
    float left
    margin-left 2%

  p
    font-size 30px

  pre
    border 3px solid #fff
    border-radius(3px)

